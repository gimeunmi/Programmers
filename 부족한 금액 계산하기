class Solution {

    public long solution(int price, int money, int count) {
        long answer = -1;
        long result=0;

        //N번째 이용시 N배의 요금 구하기
        for(int i=1;i<=count;i++){
         result += i * price;
                            }
         answer = result-money;
        
         if(answer<0){
             return 0;
         }
             
        return answer;

                   }
       
      
}
